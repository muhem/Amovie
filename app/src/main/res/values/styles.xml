<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amikom</item>
        <item name="colorPrimaryDark">@color/amikom</item>
        <item name="colorAccent">@color/amikom</item>
    </style>
    <style name="TextSpec">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSpec.Field">
        <item name="android:textColor">@color/colorSubTitle</item>
    </style>

    <style name="TextSpec.Value">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/amikom</item>
        <item name="colorPrimaryDark">@color/amikom</item>
        <item name="colorAccent">@color/amikom</item>
    </style>

    <style name="aboutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/amikom</item>
        <item name="colorPrimaryDark">@color/amikom</item>
        <item name="colorAccent">@color/amikom</item>
    </style>

</resources>
